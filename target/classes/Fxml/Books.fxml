<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@../Styles/Book.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.librarymanager.Controllers.BookController">
    <!-- Formulaire d'ajout -->
    <VBox alignment="TOP_CENTER" spacing="10">
        <Label styleClass="form-title" text="Ajouter un Livre" />

        <Label text="Titre:" />
        <TextField fx:id="titleField" promptText="Titre du livre" />

        <Label text="Auteur:" />
        <TextField fx:id="authorField" promptText="Auteur du livre" />

        <Label text="Image:" />
        <Button fx:id="chooseImageButton" onAction="#handleChooseImage" text="Choisir une Image" />

        <Button fx:id="addBookButton" onAction="#handleAddBook" styleClass="primary-button" text="Ajouter le Livre" />
    </VBox>
   <ScrollPane prefHeight="200.0" prefWidth="200.0">
     <content>
       <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" />
     </content>
   </ScrollPane>
</HBox>
